{
  "manifest_version": 2,
  "name": "Crypt3TR",
  "version": "1.0",
  "description": "Client-side text encryption and decryption for web pages and webmail.",
  "icons": {
    "32": "icon-32.png",
    "48": "icon-48.png",
    "96": "icon-96.png"
  },
  "browser_action": {
    "default_title": "Crypt3TR",
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icon-32.png",
      "48": "icon-48.png"
    }
  },
  "permissions": [
    "storage",
    "menus",
    "contextMenus",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
